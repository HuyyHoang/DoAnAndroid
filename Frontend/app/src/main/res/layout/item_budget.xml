<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_budget">
    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:background="@drawable/botron"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="312dp"
                android:layout_height="33dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/botron">

                    <TextView
                        android:id="@+id/budget_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_normal"
                        android:text="Shopping"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/warning"
                    android:visibility="gone"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="311dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/text_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/inter_normal"
                    android:text="Remaining"
                    android:textColor="@color/dark"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/amount_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_remain"
                    android:fontFamily="@font/inter_normal"
                    android:textColor="@color/dark"
                    android:textSize="24sp" />


                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:layout_alignParentBottom="true"
                    android:max="100" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/amount_spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/inter_normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/inter_normal"
                    android:text="of"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/budget_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/inter_normal"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
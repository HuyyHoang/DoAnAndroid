<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".account.fragment_account"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/violet">
        <ImageButton
            android:id="@+id/btn_back_account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_west_24"
            app:tint ="@color/white"/>

        <TextView
            android:id="@+id/title_account"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/inter_normal"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Account Balance"
        android:fontFamily="@font/inter_normal"
        android:textColor="@color/light_20"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="$"
            android:fontFamily="@font/inter_normal"
            android:textColor="@color/dark_75"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/tv_account_money_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_normal"
            android:textColor="@color/dark_75"
            android:textSize="30dp"/>
    </LinearLayout>


    <ListView
        android:id="@+id/lv_account"
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_gravity="center"/>
    

    <Button
        android:id="@+id/btn_add_account"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg"
        android:layout_gravity="center|bottom"
        android:text="Add new wallet"
        android:fontFamily="@font/inter_normal"/>
</LinearLayout>
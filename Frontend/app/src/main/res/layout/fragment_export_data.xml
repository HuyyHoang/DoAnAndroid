<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.fragment_export"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/violet">
        <ImageButton
            android:id="@+id/btn_back_export"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_west_24"
            app:tint ="@color/white"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:text="Export data"
            android:fontFamily="@font/inter_normal"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="What data do you want to report ?"
        android:fontFamily="@font/inter_normal"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="When date range ?"
        android:fontFamily="@font/inter_normal"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/dataRange"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="What format do you want to export ?"
        android:fontFamily="@font/inter_normal"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/dataFormat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/upload"
        android:fontFamily="@font/inter_normal"
        android:text="Export" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".forgotpassword.forgot_password"
    android:orientation="vertical"
    android:background="@drawable/background12">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_back_forgot_password"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_west_24"
            app:tint ="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/title_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="@string/title_forgot_password"
            android:fontFamily="@font/inter_normal"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vie_bg"
        android:layout_marginTop="230dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_dont_worry2"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/textview_dont_worry_2_forgot_password"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin ="20dp"
            android:background="@drawable/edit_text_bg"
            android:hint="   Username" />


        <TextView
            android:id="@+id/tv_notify_forgot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/red"
            android:textSize="15dp" />

    <Button
        android:id="@+id/btn_continue_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_bg"
        android:text="Continue"
        android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>